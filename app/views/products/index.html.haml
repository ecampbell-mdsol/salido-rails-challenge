- content_for(:page_header_text) do
  Products List
  .pull-right= link_to 'New Product', new_product_path, class: 'btn btn-success'

%table#products
  %thead
    %tr
      %th Name
      %th Type
      %th Price Retail
      %th Description
  %tbody
    - @products.each do |product|
      %tr
        %td
          = link_to edit_product_path(product) do
            %span.glyphicon.glyphicon-pencil
          = link_to product, method: :delete, data: {confirm: 'Are you sure?'} do
            %span.glyphicon.glyphicon-remove
          = product.name
        %td= product.product_type
        %td= '$%.2f' % product.price_retail
        %td= product.description
